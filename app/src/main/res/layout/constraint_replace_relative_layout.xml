<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243"
        app:srcCompat="@drawable/lake"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="阳澄湖大闸蟹"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/img_left"
        app:layout_constraintTop_toTopOf="@+id/img_left"/>

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="RMB200"
        app:layout_constraintBottom_toBottomOf="@+id/img_left"
        app:layout_constraintLeft_toRightOf="@+id/img_left"/>

    <TextView
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="原价1000"
        app:layout_constraintLeft_toRightOf="@+id/text_price"
        app:layout_constraintTop_toTopOf="@+id/text_price"/>

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_center_vertical"
        app:layout_constraintLeft_toLeftOf="@+id/text_collect"
        app:layout_constraintRight_toRightOf="@+id/text_collect"
        app:srcCompat="@drawable/ic_android_black_24dp"/>

    <TextView
        android:id="@+id/text_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="2dp"
        android:text="是否收藏"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_center_vertical"
        tools:layout_editor_absoluteY="164dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/img_left"
        app:layout_constraintGuide_begin="180dp"
        app:layout_constraintTop_toTopOf="@+id/img_left"/>


</android.support.constraint.ConstraintLayout>