<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/button37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/button40"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        />

    <Button
        android:id="@+id/button38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintLeft_toRightOf="@+id/button37"
        app:layout_constraintRight_toLeftOf="@+id/button39"
        app:layout_constraintTop_toTopOf="@+id/button37"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/button39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintLeft_toRightOf="@+id/button38"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button38"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/button40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/button41"
        app:layout_constraintLeft_toLeftOf="@+id/button37"
        app:layout_constraintTop_toBottomOf="@+id/button37"
        />

    <Button
        android:id="@+id/button41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/button42"
        app:layout_constraintLeft_toLeftOf="@+id/button40"
        app:layout_constraintTop_toBottomOf="@+id/button40"
        android:layout_marginLeft="0dp"/>

    <Button
        android:id="@+id/button42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/button41"
        app:layout_constraintTop_toBottomOf="@+id/button41"
        android:layout_marginLeft="0dp"/>

</android.support.constraint.ConstraintLayout>